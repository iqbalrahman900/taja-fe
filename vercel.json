{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "installCommand": "npm install --force --legacy-peer-deps",
          "buildCommand": "npm run build"
        }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/assets/(.*)", "dest": "/assets/$1" },
      { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json|svg|webmanifest))", "dest": "/$1" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }